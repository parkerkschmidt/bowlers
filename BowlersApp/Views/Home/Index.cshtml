@{
    ViewData["Title"] = "Home";
}

@model List<Bowler>

<h1 class="text-center">Bowler Roster: @ViewBag.teams</h1>
<br />


<!-- display team filters-->
<div class="row">
    <div class="col-2">
        <vc:team></vc:team>
    </div>

    <!-- bowler roster table-->
    <div class="col-10">
        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold">
                <tr>
                    <td>Bowler ID</td>
                    <td>First Name</td>
                    <td>Middle Init</td>
                    <td>Last Name</td>
                    <td>Address</td>
                    <td>City</td>
                    <td>State</td>
                    <td>Zip</td>
                    <td>Phone</td>

                </tr>
            </thead>

            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.BowlerID</td>
                        <td>@b.BowlerFirstName</td>
                        <td>@b.BowlerMiddleInit</td>
                        <td>@b.BowlerLastName</td>
                        <td>@b.BowlerAddress</td>
                        <td>@b.BowlerCity</td>
                        <td>@b.BowlerState</td>
                        <td>@b.BowlerZip</td>
                        <td>@b.BowlerPhoneNumber</td>
                        <td><a asp-controller="Home" asp-action="EditBowler" asp-route-id="@b.BowlerID">Edit</a></td>
                        <td><a asp-controller="Home" asp-action="DeleteBowler" asp-route-id="@b.BowlerID">Delete</a></td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>

