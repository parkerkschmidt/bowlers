@{
}

@model Bowler

<form method="post">
    <div asp-validation-summary="All"></div>

    <label asp-for="BowlerFirstName">First Name: </label>
    <input asp-for="BowlerFirstName" /><br /><br />

    <label asp-for="BowlerLastName">Last Name: </label>
    <input asp-for="BowlerLastName" /><br /><br />

    <label asp-for="BowlerMiddleInit">Middle Initial: </label>
    <input asp-for="BowlerMiddleInit" /><br /><br />

    <label asp-for="BowlerAddress">Address: </label>
    <input asp-for="BowlerAddress" /><br /><br />

    <label asp-for="BowlerCity">City: </label>
    <input asp-for="BowlerCity" /><br /><br />

    <label asp-for="BowlerState">State: </label>
    <input asp-for="BowlerState" /><br /><br />

    <label asp-for="BowlerZip">Zip: </label>
    <input asp-for="BowlerZip" /><br /><br />

    <label asp-for="BowlerPhoneNumber">Phone: </label>
    <input asp-for="BowlerPhoneNumber" /><br /><br />

    <select asp-for="TeamID">
        <option value="">--Select a Team--</option>
        @foreach (Team t in ViewBag.Teams)
        {
            <option value="@t.TeamID">@t.TeamName</option>
        }
    </select><br /><br />


    <input type="hidden" asp-for="BowlerID" />

    <button class="btn btn-sm btn-primary" type="submit">Submit Bowler</button>
</form>