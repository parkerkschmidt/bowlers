@{
}


@model IEnumerable<string>
<!-- this is for the category section on the left hand side of the home page-->
<div class="d-grid p-25">
    <a asp-controller="Home" asp-action="Index" asp-route-teamNames=""  class="btn btn-outline-secondary">All Teams</a>
    <br /><br />

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamNames="@t"
           class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
           <br /><br />
    }
</div>